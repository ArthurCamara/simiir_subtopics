<userConfiguration id="{userID}">

	<queryGenerator class="{queryGeneratorClass}">
            {queryGeneratorAttributes}
	</queryGenerator>

	<textClassifiers>
        <snippetClassifier class="{snippetClassifierClass}">
            {snippetClassifierAttributes}
        </snippetClassifier>

        <documentClassifier class="{documentClassifierClass}">
            {documentClassifierAttributes}
        </documentClassifier>
    </textClassifiers>

     <stoppingDecisionMaker class="{stoppingClass}">
         {stoppingAttributes}
     </stoppingDecisionMaker>

    <subtopicDecisionMaker class="{subtopicClass}">
        {subtopicAttributes}
    </subtopicDecisionMaker>

    <logger class="FixedCostLogger">
		<attribute name="time_limit" type="integer" value="{timeLimit}" is_argument="true" />
		<attribute name="query_cost" type="integer" value="{queryCost}" is_argument="true" />
		<attribute name="document_cost" type="integer" value="{documentCost}" is_argument="true" />
		<attribute name="snippet_cost" type="integer" value="{snippetCost}" is_argument="true" />
		<attribute name="serp_results_cost" type="integer" value="{serpCost}" is_argument="true" />
		<attribute name="mark_document_cost" type="integer" value="{markCost}" is_argument="true" />
	</logger>

	<searchContext class="SearchContext">
		<attribute name="relevance_revision" type="integer" value="1" is_argument="false" />
	</searchContext>

	<serpImpression class="{serpClass}">
        {serpAttributes}
	</serpImpression>


</userConfiguration>